{
  "version": 2,
  "builds": [
    {
      "src": "src/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": "src/**/*"
      }
    }
  ],
  "routes": [
    {
      "src": "/subject/(.*)",
      "dest": "/src/app.py"
    },
    {
      "src": "/category/(.*)",
      "dest": "/src/app.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/src/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/src/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
